{
    "files.insertFinalNewline": true,
    "files.exclude": {
        "**/.ruff_cache": true,
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/.git": true,
        "**/.DS_Store": true,
        "**/__init__.py": true,
    },
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.codeActionsOnSave": {
        "source.fixAll.ruff": "explicit"
    },
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
}
